@page
@model MegadeskRazorPages.Pages.Quotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Quotes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].desk.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].desk.Depth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].desk.Drawers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].desk.Material)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].RushDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].TotalPrice)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DeskQuote) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desk.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desk.Depth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desk.Drawers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desk.Material)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RushDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>

            <td>
                <a class="btn btn-outline-secondary" asp-page="./Edit" asp-route-id="@item.ID">Edit</a>
                <a class="btn btn-outline-secondary" asp-page="./Details" asp-route-id="@item.ID">Details</a>
                <a class="btn btn-outline-danger" asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<hr />
<div>
    <a class="btn btn-outline-secondary" asp-page="Create">Create quote</a>
    <a class="btn btn-outline-secondary" asp-page="../Index">Main menu</a>
    <a class="btn btn-outline-secondary" asp-page="SearchQuote">Search quote</a>
</div>

@page
@model TeamSacramentMeetingPlanner.Pages.Meetings.IndexModel

@{
    ViewData["Title"] = "Agenda";
}

<h1>AGENDA</h1>

<p>
    <a asp-page="Create" button class="btn"><i class="fa align-items-sm-start"></i>Create new agenda</a>
</p>
<form asp-action="OnGetAsync" method="get">
    <p>
        Date: <input type="date" asp-for="Date" value=""/>
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].MeetingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].Conductor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].OpeningPrayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].SpeakerOne)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].SpeakerTwo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].SpeakerThree)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting[0].ClosingPrayer)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meeting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeetingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Conductor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpeningPrayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeakerOne)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeakerTwo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeakerThree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClosingPrayer)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id" button class="btn"><i class="fa fa-edit"></i>Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id" button class="btn"><i class="fa fa-list"></i>Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id" button class="btn"><i class="fa fa-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
